import random

def pick_rarity():
    chances = {
        'common': 40,
        'uncommon': 25,
        'rare': 15,
        'legendary': 8,
        'history': 5,
        'divine': 4,
        'exotic': 2,
        'edit': 1
    }
    rarities = list(chances.keys())
    weights = list(chances.values())
    return random.choices(rarities, weights=weights, k=1)[0]

